{
  "name": "yallah",
  "version": "0.0.1",
  "description": "A browser application container.",
  "author": "Dylan Aubrey <dylanaubrey@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/dylanaubrey/yallah",
  "bugs": {
    "url": "https://github.com/dylanaubrey/yallah/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:dylanaubrey/yallah.git"
  },
  "main": "lib/main/index.js",
  "module": "lib/module/index.js",
  "browser": "lib/browser/index.js",
  "keywords": [
    "isomorphic",
    "progressive web app",
    "PWA"
  ],
  "scripts": {
    "build": "npm run test && npm run transpile",
    "clean": "rimraf lib/*",
    "coverage:node": "cross-env BABEL_ENV=test ISO_LOG=false nyc mocha test/specs/index.js",
    "coverage:web": "cross-env BABEL_ENV=browser karma start --single-run --browsers PhantomJS",
    "coverage:web:debug": "cross-env BABEL_ENV=browser karma start --no-single-run --browsers Chrome",
    "lint": "eslint . --fix",
    "publish:pkg": "npm run build && npm publish",
    "test": "npm run lint && npm run coverage:web",
    "transpile": "npm run clean && npm run transpile:browser && npm run transpile:main && npm run transpile:module",
    "transpile:browser": "cross-env BABEL_ENV=browser babel src --out-dir lib/browser --copy-files",
    "transpile:main": "cross-env BABEL_ENV=main babel src --out-dir lib/main --copy-files",
    "transpile:module": " cross-env BABEL_ENV=module babel src --out-dir lib/module --copy-files"
  },
  "dependencies": {
    "es6-promise": "^4.1.1",
    "history": "^4.7.2",
    "iso-logger": "0.0.8",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-lodash": "^3.2.11",
    "babel-preset-env": "^1.5.2",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "codecov": "^2.2.0",
    "cross-env": "^5.0.1",
    "dirty-chai": "^2.0.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "fetch-mock": "^5.12.1",
    "karma": "^1.7.1",
    "karma-babel-preprocessor": "^7.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "phantomjs-prebuilt": "^2.1.15",
    "rimraf": "^2.6.1",
    "sinon": "^3.2.0",
    "sinon-chai": "^2.11.0",
    "webpack": "^3.6.0"
  }
}
